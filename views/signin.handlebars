
{{>header}}

        <div class="modal-body sign-in-div" style="background-color: rgb(246, 197, 173);">
           <h4 class="mb-3">Sign-in</h4>
          <form>          
              <div class="form-group">
                <label for="exampleInputEmail1">Email Address</label>
                <input type="email" class="form-control" id="InputEmail" aria-describedby="emailHelp" placeholder="Enter Email">
              </div>
              <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="Password" placeholder="Password">
              </div>
              <div class="text-center">
                <button id="login-button" type="submit" class="btn btn-outline-dark text-light m-1" style="background-color: rgb(241, 129, 72);">Login</button>
              </div>
            </form>
            <p id="login-fail-text"></p>

        </div>
